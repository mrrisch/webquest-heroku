= simple_form_for @webquest, html: {multipart: true} do |f|
	-if @webquest.errors.any?
		#errors
			%h2
			=pluralize(@webquest.errors.count, "error")
			prevented this webquest from saving.
			%ul
				-@webquest.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.input :image, input_html: {class: 'form-control'}

	.form-group
		=f.input :name, input_html: {class: "form-control"}

	.form-group
		=f.input :beschreibung, input_html: {class: "form-control"}

	.form-group
		=f.collection_select :fach_id, Fach.all, :id, :name, {promt: "Unterrichtsfach ausw√§hlen" }, input_html: {class: "form-control"}
	.form-group
		=f.input :anhang, input_html: {class: 'form-control'}

	=f.button  :submit , "Webquest erstellen" , class: "btn btn-primary"
